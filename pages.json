{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationStyle": "custom",
				"enablePullDownRefresh": true
			}
		}, {
			"path": "pages/feeds/feeds",
			"style": {
				"navigationStyle": "custom",
				"enablePullDownRefresh": true
			}

		}, {
			"path": "pages/my/my",
			"style": {
				"navigationStyle": "custom",
				"enablePullDownRefresh": false
			}

		}
	    ,{
            "path" : "pages/webview/webview",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"subPackages":[
		{
			"root":"subpages",
			"pages":[
				{
					"path":"feedInfo",
					"style":{
						"navigationBarTitleText":"详情",
						"navigationBarTextStyle":"black",
						"navigationBarBackgroundColor":"#FFFFFF",
						"backgroundColor":"#FFFFFF"
					}
				},
				{
					"path":"newsInfo",
					"style":{
						"navigationBarTitleText":"详情",
						"navigationBarTextStyle":"black",
						"navigationBarBackgroundColor":"#FFFFFF",
						"backgroundColor":"#FFFFFF"
					}
				},
				{
					"path":"mySetting",
					"style":{
						"navigationBarTitleText":"个人设置",
						"navigationBarTextStyle":"black",
						"navigationBarBackgroundColor":"#FFFFFF",
						"backgroundColor":"#FFFFFF"
					}
				}
			]
		}
	],
	"tabBar": {
		"color": "#000",
		"selectedColor": "#0050FF",
		"list": [{
				"iconPath": "static/homepage.png",
				"selectedIconPath": "static/selectedHomePage.png",
				"text": "首页",
				"pagePath": "pages/index/index"
			},
			{
				"iconPath": "/static/list.png",
				"selectedIconPath": "static/selectedList.png",
				"text": "动态",
				"pagePath": "pages/feeds/feeds"
			},
			{
				"iconPath": "static/user.png",
				"selectedIconPath": "static/selectedUser.png",
				"text": "我的",
				"pagePath": "pages/my/my"
			}
		]
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"easycom": {
		
		// 下载安装的方式需要前面的"@/"，npm安装的方式无需"@/"
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue",
		// npm安装方式
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	}
}
